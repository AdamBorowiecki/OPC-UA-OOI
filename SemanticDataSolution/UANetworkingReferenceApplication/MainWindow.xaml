<Window x:Class="UAOOI.SemanticData.UANetworking.ReferenceApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UAOOI.SemanticData.UANetworking.ReferenceApplication"
        xmlns:code="clr-namespace:UAOOI.SemanticData.UANetworking.ReferenceApplication"
        mc:Ignorable="d"
        Title="{Binding Path=WindowTitle}" Height="800" Width="500" MinHeight="700" MinWidth="500" Icon="PrepareProcess.ico">
  <Window.DataContext>
    <code:MainWindowViewModel/>
  </Window.DataContext>
  <Window.Resources>
    <Style x:Key="Title" TargetType="{x:Type Label}">
      <Setter Property="FontSize" Value="21.333"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="Margin" Value="20"/>
    </Style>
    <Style x:Key="Label" TargetType="{x:Type Label}">
      <Setter Property="Height" Value="30"/>
    </Style>
    <Style x:Key="TextBox" TargetType="{x:Type Control}">
      <Setter Property="Height" Value="30"/>
    </Style>
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="20"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>
    <DockPanel Grid.Row="0" LastChildFill="True">
      <Menu x:Name="menu" Height="20" HorizontalAlignment="Left" Width="Auto" DockPanel.Dock="Right" ToolTip="Available actions">
        <MenuItem Header="File" >
          <MenuItem Header="Open Consumer Configuration" Command="{Binding Path=OpenConsumerConfiguration}" ToolTip="Opens the configuration file of the consumer in the default xml editor."/>
          <MenuItem Header="Open Producer Configuration" Command="{Binding Path=OpenProducerConfiguration}" ToolTip="Opens the configuration file of the consumer in the default xml editor." />
        </MenuItem>
        <MenuItem Header="Actions" ToolTip="Available actions">
          <MenuItem Header="Consumer Update Configuration" Command="{Binding Path=ConsumerUpdateConfiguration}" ToolTip="Updates the consumer configuration and restarts the data receiving process"/>
          <MenuItem Header="Producer Update Configuration" Command="{Binding Path=ProducerRestart}" ToolTip="Updates the producer configuration and restarts the data pumping process" />
          <MenuItem Header="Configuration folder" Command="{Binding Path=ConfigurationFolder}" ToolTip="Open folder containing configuration files" />
        </MenuItem>
        <MenuItem Header="Help" ToolTip="Opens the project website" Command="{Binding Path=HelpDocumentation}" />
      </Menu>
    </DockPanel>
    <Grid Grid.Row="1"  Background="#FF06F711" VerticalAlignment="Stretch" >
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Label Grid.Row="0" Style="{StaticResource Title}">Consumer</Label>
      <Grid  Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
          <Label Style="{StaticResource Label}" >Received: Remote UTC time</Label>
          <Label Style="{StaticResource Label}">Received: Int32 Counts from MinVal</Label>
          <Label Style="{StaticResource Label}">Packages Received</Label>
          <Label Style="{StaticResource Label}">Bytes Received</Label>
          <Label Style="{StaticResource Label}">Local UDP port</Label>
          <Label Style="{StaticResource Label}">Consumer status</Label>
        </StackPanel>
        <StackPanel Orientation="Vertical"  Grid.Column="1" Grid.Row="0">
          <TextBox Style="{StaticResource TextBox}" Text="{Binding Path=Value1.Value, FallbackValue=  ?????, Mode=OneWay }" ToolTip="Time transmitted from remote station, UTC because of UA Encoding." />
          <TextBox Style="{StaticResource TextBox}" Text="{Binding Path=Value2.Value, FallbackValue=  ?????, Mode=OneWay }" ToolTip="Random floating-point number between 0.0 and 1.0 transmitted from remote station."/>
          <TextBox Style="{StaticResource TextBox}" Text="{Binding Path=ConsumerFramesReceived,  FallbackValue=?????, Mode=OneWay}" ToolTip="Packages sent by the producer"/>
          <TextBox  Style="{StaticResource TextBox}" Text="{Binding Path=ConsumerBytesReceived,  FallbackValue=?????, Mode=OneWay }" ToolTip="Bytes sent by the producer"/>
          <TextBox Style="{StaticResource TextBox}" Text="{Binding Path=UDPPort, FallbackValue= ______  }" />
          <TextBox  Style="{StaticResource TextBox}" Text="{Binding Path=ConsumerErrorMessage, Mode=TwoWay }" ToolTip="Bytes sent by the producer"/>
          <Button  Style="{StaticResource TextBox}" Command="{Binding Path=ConsumerUpdateConfiguration}" >Update Configuration</Button>
        </StackPanel>
        <ListBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Path=ConsumerLog}" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"  />
      </Grid>
    </Grid>
    <StackPanel Orientation="Vertical" Grid.Row="2" Background="#FF0AC3F9" >
      <Label Style="{StaticResource Title}" >Producer:</Label>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel  Margin="10" Orientation="Vertical" Grid.Column="0">
          <Label Style="{StaticResource Label}" >Packages Sent</Label>
          <Label Style="{StaticResource Label}">Bytes Sent</Label>
          <Label Style="{StaticResource Label}">Remote Host Name</Label>
          <Label Style="{StaticResource Label}">Remote Port Number</Label>
          <Label Style="{StaticResource Label}">Producer status</Label>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Vertical" Grid.Column="1">
          <TextBox Style="{StaticResource TextBox}" Text="{Binding Path=PackagesSent,  FallbackValue=?????, Mode=OneWay}" ToolTip="Packages sent by the producer"/>
          <TextBox  Style="{StaticResource TextBox}" Text="{Binding Path=BytesSent,  FallbackValue=?????, Mode=OneWay }" ToolTip="Bytes sent by the producer"/>
          <TextBox  Style="{StaticResource TextBox}" Text="{Binding Path= RemoteHost,  FallbackValue=?????, Mode=TwoWay }" ToolTip="Bytes sent by the producer"/>
          <TextBox  Style="{StaticResource TextBox}" Text="{Binding Path= RemotePort,  FallbackValue=?????, Mode=TwoWay }" ToolTip="Bytes sent by the producer"/>
          <TextBox  Style="{StaticResource TextBox}" Text="{Binding Path=ProducerErrorMessage, Mode=TwoWay }" ToolTip="Bytes sent by the producer"/>
          <Button  Style="{StaticResource TextBox}" Command="{Binding Path=ProducerRestart}" >Update Configuration</Button>
        </StackPanel>
      </Grid>
    </StackPanel>
  </Grid>
</Window>
